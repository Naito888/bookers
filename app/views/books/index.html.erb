<head>
  <title>WebCampBackendNew</title>
</head>
  
<body>
  <p id="notice"></p>
  <h1>Books</h1>
  
  <table>
    <thed>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thed>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>
            <a class="show_67186" href="/books/67186">Show</a>
          </td>
          <td>
            <a class="edit_67186" href="/books/67186/edit">Edit</a>
          </td>
          <td>
            <a data-confirm="Are you sure?" class="destroy_67186" rel="nofollow" data-method="delete" href="/books/67186">Destroy</a>
          </td>
        </tr>
      <% end %>
    </tbody>
  
  </table>
  
  <h2>New book</h2>
  <%= form_with model: @book do |f| %>
  
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>
  
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
  <% end %>
</body>
